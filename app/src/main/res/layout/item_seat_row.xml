<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Row Label (A, B, C, etc.) -->
    <TextView
        android:id="@+id/tvRowLabel"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Seats RecyclerView (Horizontal) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRowSeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvRowLabel"
        app:layout_constraintEnd_toStartOf="@id/tvRowLabelEnd" />

    <!-- Row Label End (A, B, C, etc.) -->
    <TextView
        android:id="@+id/tvRowLabelEnd"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="A"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
