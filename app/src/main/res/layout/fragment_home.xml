<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Carousel Section Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/carousel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.mobileapp.feature.homepage.ui.fragment.CarouselFragment" />

        <!-- Movie Section Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/movie_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:name="com.example.mobileapp.feature.homepage.ui.fragment.MovieFragment" />

        <!-- News Section Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/news_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:name="com.example.mobileapp.feature.homepage.ui.fragment.NewsFragment" />

        <!-- Membership Tier Section Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/membership_tier_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:name="com.example.mobileapp.feature.homepage.ui.fragment.MembershipTierFragment" />

        <!-- Có thể thêm sections khác vào đây -->
        <!--
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/theater_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:name="com.example.mobileapp.feature.homepage.ui.fragment.TheaterFragment" />
        -->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>