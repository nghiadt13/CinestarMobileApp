<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCinema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/selector_cinema_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/selector_cinema_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Cinema Logo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logoContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivCinemaLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:contentDescription="@null"
                tools:src="@drawable/ic_movie_24" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Cinema Name -->
        <TextView
            android:id="@+id/tvCinemaName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ivCheckIcon"
            app:layout_constraintStart_toEndOf="@id/logoContainer"
            app:layout_constraintTop_toTopOf="@id/logoContainer"
            tools:text="CGV Vincom Đồng Khởi" />

        <!-- Cinema Address -->
        <TextView
            android:id="@+id/tvCinemaAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tvCinemaName"
            app:layout_constraintStart_toStartOf="@id/tvCinemaName"
            app:layout_constraintTop_toBottomOf="@id/tvCinemaName"
            tools:text="Tầng 3, TTTM Vincom Center B, Q.1" />

        <!-- Tags Container -->
        <LinearLayout
            android:id="@+id/tagsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tvCinemaName"
            app:layout_constraintTop_toBottomOf="@id/tvCinemaAddress">

            <TextView
                android:id="@+id/tag2D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_cinema"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="2D"
                android:textColor="@color/gray_400"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tagSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_tag_cinema"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Phụ đề"
                android:textColor="@color/gray_400"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Check Icon (shown when selected) -->
        <ImageView
            android:id="@+id/ivCheckIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:alpha="0"
            android:contentDescription="@null"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/brand_accent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>